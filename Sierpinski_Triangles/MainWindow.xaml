<Window x:Class="Sierpinski_Triangles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sierpinski Attractor" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Width="768" Height="555.5" Background="#FFF3F3F3">
    <Grid HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100">
		<Canvas x:Name="ShapeCanvas" HorizontalAlignment="Left" Height="399.5" VerticalAlignment="Top" Width="762" Background="White" MouseRightButtonUp="ShapeCanvas_MouseRightButtonUp" MouseLeftButtonDown="ShapeCanvas_MouseLeftButtonDown"/>
		<Label Content="Shape Color&#xA;" Margin="56,426,-30.457,-367.92"/>
		<Label Content="Shape Size" Margin="242,426,-208.87,-351.96"/>
		<Button x:Name="RunButton" Content="Run" IsDefault="True" Click="RunButton_Click" Margin="390,434.97,-435,-390.93"/>
		<Button x:Name="ClearButton" Content="Clear" Click="ClearButton_Click" Margin="557,434.97,-602,-390.93"/>
		<ComboBox Margin="56,460,-76,-381.96">
			<ComboBoxItem x:Name="RedShapeItem" Content="Red" HorizontalAlignment="Left" Width="118" IsSelected="True"/>
			<ComboBoxItem x:Name="BlueShapeItem" Content="Blue" HorizontalAlignment="Left" Width="118"/>
			<ComboBoxItem x:Name="GreenShapeItem" Content="Green" HorizontalAlignment="Left" Width="118"/>
			<ComboBoxItem x:Name="YellowShapeItem" Content="Yellow" HorizontalAlignment="Left" Width="118"/>
		</ComboBox>
		<RadioButton x:Name="ShapeSizeTwo" Content="2" Margin="225,464,-159.87,-378.04"/>
		<RadioButton x:Name="ShapeSizeFour" Content="4" Margin="264.87,464,-201.74,-378.04"/>
		<RadioButton x:Name="ShapeSizeSix" Content="6" Margin="306.74,464,-246.61,-378.04"/>
	</Grid>
</Window>
