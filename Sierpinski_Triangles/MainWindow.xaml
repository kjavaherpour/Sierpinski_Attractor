<Window x:Class="Sierpinski_Triangles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow">
    <Grid>
    	<Ellipse x:Name="BlueCP" Fill="Blue" HorizontalAlignment="Left" Height="15" Margin="60,63,0,0" Stroke="Black" VerticalAlignment="Top" Width="15"/>
    	<Ellipse x:Name="RedCP" Fill="Red" HorizontalAlignment="Left" Height="15" Margin="681,63,0,0" Stroke="Black" VerticalAlignment="Top" Width="15"/>
    	<Ellipse x:Name="YellCP" Fill="Yellow" HorizontalAlignment="Left" Height="15" Margin="681,424,0,0" Stroke="Black" VerticalAlignment="Top" Width="15"/>
    	<Ellipse x:Name="GreenCP" Fill="#FF17FF00" HorizontalAlignment="Left" Height="15" Margin="60,424,0,0" Stroke="Black" VerticalAlignment="Top" Width="15"/>
        
    </Grid>
</Window>
